{% extends 'base.html.twig' %}

{% block title %}
    {{ recette.nom }}
{% endblock %}

{% block body %}

    <div class="container">
        <h3>{{ recette.nom }}</h3>
        <p>Pour {{ recette.portion }} personnes</p>
        <div class="row">
            <div class="col-3">
                <h6>Ingr√©dients</h6>
                <ul>
                    {% for ingredient in recette.ingredients %}
                        <li>{{ ingredient.quantite }} {{ ingredient.aliment.unite }} - {{ ingredient.aliment.nom }} </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-9">
                <h6>Etapes</h6>
                <ol>
                    {% for etape in recette.etapesRecette %}
                        <li>{{ etape.descriptif }}</li>
                    {% endfor %}
                </ol>
            </div>
        </div>
    </div>
    
{% endblock %}